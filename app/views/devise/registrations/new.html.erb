

<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center ">
                  <%= image_tag("ruby.png", style: "width: 61px")%>
                  <h5 class="mt-1 mb-5 pb-1">Ruby Go</h5>
                </div>

                
                  <p>Create your account</p>                

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-floating mb-3">
                      
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class: "form-control" %>
                      <%= f.label :email %>
                    </div>

                    <div class="form-floating mb-3">                      
                      <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder: "Username" , maxlength: 30, class: "form-control" %>
                      <%= f.label :username %>
                    </div>
                    <div class="form-floating mb-3">
                      
                      
                      <%= f.password_field :password, autocomplete: "new-password", placeholder: "passoword", class: "form-control" %>
                      <%= f.label :password %>
                    </div>
                      <p><% if @minimum_password_length %>
                        <em>(minimum <%= @minimum_password_length %> characters)</em>
                        <% end %>
                      </p>
                    <div class="form-floating mb-3">
                      
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "Password confirmation", class: "form-control"%>
                      <%= f.label :password_confirmation %>
                    </div>

                      <div >
                        <%= f.submit "Sign up", class: "btn btn-primary col-12 mx-auto  gradient-custom-2 mb-3 btn-margin" %>
                      </div>              
                    

                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Already have an account? Just</p>
                      <%= link_to "Log in", new_session_path(resource_name) , class: "btn btn-outline-danger" %>
                    </div>

                  <%end%>
                                      
                    </div>
                  </div>
                  <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class="text-white px-3 py-4 p-md-5 mx-md-4 ">
                      <div class="slideFromLeft ">
                        <%= image_tag("blogs.png", class: " animated-img ")%>
                      </div >
                      <h4 class="mb-4">We are more than just a company</h4>
                      <p class="small mb-0 ">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        <div class="slideFromRight">
                          <%= image_tag("content_blog.png", class: "animated-img")%>
                        </div>
                  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
